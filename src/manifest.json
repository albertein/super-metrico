{
  "manifest_version": 2,

  "name": "Super Metrico",
  "description": "This extension automatically convert units from the imperial system back to the international metric system",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["supermetrico-content.js"]
    }
  ],
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" }
}
